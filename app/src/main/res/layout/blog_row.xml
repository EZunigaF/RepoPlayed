<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/post_img"
            android:layout_marginTop="52dp"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/degradados1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/home_card_desc"
            android:layout_marginTop="215dp"/>

        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_alignBottom="@id/post_img"
            android:layout_marginBottom="0dp"
            android:maxLines="2"
            android:shadowColor="#6FEE17"
            android:textStyle="bold"
            android:text="Desc"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/home_card_title"/>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Title"
            android:textAlignment="textStart"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="36sp"
            android:typeface="serif" />
        
        <TextView
            android:id="@+id/category_post"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="58dp"
            android:layout_marginRight="24dp"
            android:text="Category"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorMagentaNeon"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6px"
        android:background="@color/colorCyanNeon"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="@color/black"/>

</LinearLayout>