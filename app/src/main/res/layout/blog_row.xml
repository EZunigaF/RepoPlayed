<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/post_img"
            android:layout_width="match_parent"
            android:layout_height="291dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/degradados1" />


        <TextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/post_img"
            android:layout_marginBottom="0dp"

            android:background="@color/blue_semi_transparent"
            android:padding="15dp"
            android:shadowColor="#6FEE17"
            android:text="Desc"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/home_iced_card_title"/>
        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_game"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="#F7F7F7"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="36sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/category_post"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="58dp"
            android:layout_marginRight="24dp"
            android:text="Category"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorMagentaNeon"/>


    </RelativeLayout>

</LinearLayout>