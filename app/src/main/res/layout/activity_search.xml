<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/deg223"
    tools:context=".SearchActivity">

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="Search Posts"
        android:textSize="36dp" />

    <EditText
        android:id="@+id/user_searched_post"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="75dp"
        android:layout_marginLeft="18dp"
        android:hint="Search here"
        android:padding="12dp" />

    <ImageButton
        android:id="@+id/searchPostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="80dp"
        android:layout_marginStart="325dp"
        android:background="@color/colorTransparent"
        app:srcCompat="@drawable/ic_searchpost" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/result_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="205dp"
        android:layout_marginTop="336dp"
        android:layout_marginBottom="336dp" />


</RelativeLayout>