<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    tools:context=".RegisterActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/x"
        app:lottie_scale="0.1" />

    <ImageView
        android:id="@+id/logoRPblack"
        android:layout_width="264dp"
        android:layout_height="107dp"
        android:layout_marginBottom="85dp"
        app:srcCompat="@drawable/logo_rp_black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ly_txt_name"
        android:layout_width="275dp"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtName"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_borders"
        android:hint="@string/nameHint"
        android:inputType="textPersonName"
        android:textColorHint="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ly_txt_email"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtEmail"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_borders"
        android:hint="@string/EmailHint"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@drawable/degradados1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ly_txt_emailConfirmed"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtEmailConfirmed"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_borders"
        android:hint="@string/emailConfirmHint"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:textCursorDrawable="@drawable/degradados1" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ly_txt_password"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"></com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtPassword"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:background="@drawable/register_borders"
        android:hint="@string/PasswordHint"
        android:inputType="textVisiblePassword"
        android:textColorHighlight="#F5FFFFFF"
        android:textColorHint="@color/black"
        android:textColorLink="#FFFFFF" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorWhiteD5"
        android:text="@string/registerUser"
        android:textColor="@color/colorMagentaNeon"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/go_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="95dp"
        android:text="@string/backToLogin"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>

